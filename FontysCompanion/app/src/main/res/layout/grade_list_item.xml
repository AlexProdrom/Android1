<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:inputType="textPersonName"
        android:text="System Development"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_subjectCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_subject"
        android:textSize="16sp"
        android:textColor="#999999"
        android:inputType="textPersonName"
        android:text="SubCode" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="2017/02/23"
        android:textColor="#999999"
        android:textSize="16sp"
        android:layout_below="@+id/text_subject"
        android:layout_toEndOf="@+id/text_subjectCode"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/text_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="8.0"
        android:textColor="#000"
        android:layout_above="@+id/text_date"
        android:layout_toEndOf="@+id/text_subject"
        android:layout_marginStart="12dp"
        android:textSize="20sp"/>
</RelativeLayout>